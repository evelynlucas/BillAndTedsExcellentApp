<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".fragment.QuestionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUESTION FRAGMENT"
        android:textSize="36sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/question_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/quiz_intro_text" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="What do you like to do at parties?" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/question1_answer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WHOA!"/>

                <RadioButton
                    android:id="@+id/question1_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="la glace"/>

                <RadioButton
                    android:id="@+id/question1_answer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Triumphe Napoleon!"/>

                <RadioButton
                    android:id="@+id/question1_answer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATION!"/>

            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>